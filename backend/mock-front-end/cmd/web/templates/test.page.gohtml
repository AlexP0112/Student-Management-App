{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Test microservices</h1>
                <hr>
                <a id="schoolBtn" class="btn btn-outline-secondary" href="javascript:void(0);">Test School</a>

                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">Nothing received yet...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
    let schoolBtn = document.getElementById("schoolBtn");
	let sent = document.getElementById("payload");

    schoolBtn.addEventListener("click", function() {

        const payload = {
            action: "addSchool",
			schoolEntry: {
				name: "Faculty of Automatic Control and Computer Science",
				departments: [
					{
						name: "Department of Computer Science",
						teachers: ["Florica", "Flop", "Dan Tudose"],
						yearsOfStudy: [
							{
								type: "Bachelor",
								year: 1,
								numberOfSeries: 2,
								numberOfGroups: 3,
								subjects: ["Mate", "Romana", "Informatica"]
							},
							{
								type: "Master",
								year: 2,
								numberOfSeries: 1,
								numberOfGroups: 4,
								subjects: ["Geografie", "Istorie"]
							}
						]
					},
					{
						name: "Department of IS",
						teachers: ["DDS", "FlopSD", "AAA AAA"],
						yearsOfStudy: [
							{
								type: "Bachelor",
								year: 2,
								numberOfSeries: 5,
								numberOfGroups: 9,
								subjects: ["Mate", "Romana", "Informatica"]
							},
							{
								type: "Master",
								year: 1,
								numberOfSeries: 1,
								numberOfGroups: 4,
								subjects: ["Filosofie", "Istorie"]
							}
						]
					}

				]
			}
        }

        const headers = new Headers();
        headers.append("Content-Type", "application/json");

        const body = {
            method: 'POST',
            body: JSON.stringify(payload),
            headers: headers,
        }

        fetch("http:\/\/localhost:8080/handle", body)
        .then((response) => response.json())
        .then((data) => {
            sent.innerHTML = JSON.stringify(payload, undefined, 4);
            received.innerHTML = JSON.stringify(data, undefined, 4);
            if (data.error) {
                output.innerHTML += `<br><strong>Error:</strong> ${data.message}`;
            } else {
                output.innerHTML += `<br><strong>Response from broker service</strong>: ${data.message}`;
            }
        })
        .catch((error) => {
            output.innerHTML += "<br><br>Error: " + error;
        })
    })

    </script>
{{end}}
